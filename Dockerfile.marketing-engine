FROM python:3.11-slim

# Set working directory to parent so shared modules path works
WORKDIR /

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Copy shared modules to /shared (so /app/../shared works)
COPY shared/ /shared/

# Create app directory
RUN mkdir -p /app
WORKDIR /app

# Copy marketing engine files
COPY marketing-engine/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY marketing-engine/main.py .
COPY marketing-engine/phase2_utils.py .

# Security: non-root user
RUN useradd --create-home --shell /bin/bash appuser \
    && chown -R appuser:appuser /app
USER appuser

EXPOSE 8080

# Optimized healthcheck
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=2 \
    CMD curl -f http://localhost:8080/health || exit 1

CMD ["python", "main.py"]
